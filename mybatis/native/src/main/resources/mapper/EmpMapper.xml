<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="git.wyt.mybatis.nativeapi.sample.dao.EmpMapper">

    <resultMap id="empResultMap" type="Emp">
        <id property="empNo" column="emp_no"/>
        <result property="eName" column="e_name"/>
        <result property="job" column="job"/>
        <result property="mgr" column="mgr"/>
        <result property="hireDate" column="hire_date"/>
        <result property="sal" column="sal"/>
        <result property="comm" column="comm"/>
        <result property="deptNo" column="dept_no"/>
    </resultMap>

    <select id="selectEmp" resultType="Emp" resultMap="empResultMap">
        SELECT
            emp_no,
            e_name,
            job,
            mgr,
            hire_date,
            sal,
            comm,
            dept_no
        FROM
            Emp
        WHERE
            emp_no = #{empNo}
    </select>

    <select id="findByColumn" resultType="Emp" resultMap="empResultMap">
        SELECT
            emp_no,
            e_name,
            job,
            mgr,
            hire_date,
            sal,
            comm,
            dept_no
        FROM
            Emp
        WHERE
            ${column} = #{value}
    </select>

    <insert id="insertEmp" useGeneratedKeys="true" keyProperty="empNo"
            parameterType="Emp">
        INSERT INTO Emp ( e_name, job, mgr, hire_date, sal, comm, dept_no )
        VALUES
            (#{eName},#{job},#{mgr},#{hireDate},#{sal},#{comm},#{deptNo})
    </insert>

    <update id="updateEmp">
        UPDATE Emp
        SET e_name = #{eName},
        job = #{job},
        mgr = #{mgr},
        hire_date = #{hireDate},
        sal = #{sal},
        comm = #{comm},
        dept_no = #{deptNo}
        WHERE
            emp_no = #{empNo}
    </update>

    <delete id="deleteEmp">
        DELETE
        FROM
            Emp
        WHERE
            emp_no = #{empNo}
    </delete>
</mapper>